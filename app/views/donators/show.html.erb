<h1>Donator #<%= @donator.id %></h1>

<div>
  <strong>Name</strong>:<br />
  <p><%= @donator.name %></p>
</div>
<div>
  <strong>User name</strong>:<br />
  <p><%= @donator.user_name %></p>
</div>
<div>
  <strong>Email</strong>:<br />
  <p><%= @donator.email %></p>
</div>
<div>
  <strong>Phone number</strong>:<br />
  <p><%= @donator.phone_number %></p>
</div>

<%if @donator.id == session["id"] and session["type"] == "donator"%>
    <a href="/donators_edit">edit account</a>
    <a href="/donator_change_password">change password</a>
<%end%>
