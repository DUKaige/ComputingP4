<h1>Schools</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Address</th>
      <th>Card number</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @schools.each do |school| %>
    <tr>
          <td><%= school.name %></td>
          <td><%= school.email %></td>
          <td><%= school.phone_number %></td>
          <td><%= school.address %></td>
          <td><%= school.card_number %></td>
          <td><a href="/schools/<%= school.id %>">Show</a>
        </td>
      <%if session["type"] == "manager"%>
          <td><a href="/schools_edit">Edit</a></td>
          <td><a href="/schools/<%= school.id %>/destroy">Destroy</a></td>
      <%end%>
    </tr>
  <% end %>
  </tbody>
</table>

